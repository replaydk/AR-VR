<html>
  <head>
    <script src="https://aframe.io/releases/1.6.0/aframe.min.js"></script>
    <script>
      AFRAME.registerComponent('color-changer', {
        schema: {
          maxHeight: {type: 'number', default: 2.5},
          minHeight: {type: 'number', default: 1.25}
        },
        tick: function () {
          var el = this.el;
          var position = el.getAttribute('position');
          var heightRatio = (position.y - this.data.minHeight) / (this.data.maxHeight - this.data.minHeight);
          
          // Calculate the color based on height (0 at minHeight, 1 at maxHeight)
          var color = `rgb(${Math.round(255 * (1 - heightRatio))}, ${Math.round(255 * heightRatio)}, 150)`;
          
          el.setAttribute('color', color);
        }
      });
    </script>
  </head>
  <body>
    <a-scene>
      <!-- Original ground plane -->
      <a-plane position="0 0 -4" rotation="-90 0 0" width="4" height="4" color="#000000"></a-plane>
      
      <!-- Box of planes surrounding the floating sphere, with the front face open -->
      <a-plane position="0 2 -6" rotation="0 0 0" width="4" height="4" color="#000000"></a-plane> <!-- Back -->
      <a-plane position="-2 2 -4" rotation="0 90 0" width="4" height="4" color="#000000"></a-plane> <!-- Left -->
      <a-plane position="2 2 -4" rotation="0 -90 0" width="4" height="4" color="#000000"></a-plane> <!-- Right -->
      <a-plane position="0 4 -4" rotation="-90 0 0" width="4" height="4" color="#000000"></a-plane> <!-- Top -->

      <!-- Floating and Color Changing Sphere -->
      <a-sphere position="0 1.25 -5" radius="1.25" color="#EF2D5E" color-changer
                animation__position="property: position; to: 0 2.5 -5; dir: alternate; dur: 2000; loop: true; easing: easeInOutSine">
      </a-sphere>

      <a-sky color="#ECECEC"></a-sky>
    </a-scene>
  </body>
</html>
